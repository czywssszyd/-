                        }
                        
                    }
                    addClass(target[i],'active')

                }
                target[i].onmouseleave = function(){
                    
                }
            }
        }
       
   
        function hasClass(ele, cls) {
            cls = cls || '';
            if (cls.replace(/\s/g, '').length == 0) return false; //当cls没有参数时，返回false
            return new RegExp(' ' + cls + ' ').test(' ' + ele.className + ' ');
        }
        
        function addClass(ele, cls) {
            if (!hasClass(ele, cls)) {
                ele.className = ele.className == '' ? cls : ele.className + ' ' + cls;
            }
        }
        
        function removeClass(ele, cls) {
            if (hasClass(ele, cls)) {
                var newClass = ' ' + ele.className.replace(/[\t\r\n]/g, '') + ' ';
                while (newClass.indexOf(' ' + cls + ' ') >= 0) {
                newClass = newClass.replace(' ' + cls + ' ', ' ');
                }
                ele.className = newClass.replace(/^\s+|\s+$/g, '');
            }
        }

       let data = [   // 数据
         
       ] 

       let target = document.querySelectorAll('.unit');   

       for(let i in data){  // control
            for(let i = 0; i<target.length;i++){
               //  let vDom = document.createElement('a')
                target[i].onmouseenter = function(){
                    target[i].appendChild(template(data[i]))
                }
                target[i].onmouseleave = function(){
                    target[i].removeChild(template(data[i]))
                }
            }
            
       }

       var list = document.getElementsByClassName('lis');
       var points = document.getElementsByClassName('poi');
        var index=0;//表示第几张图片和圆点。
        var clearCur= function(){//清除类名
            for(var i=0;i<list.length;i++)
            {
                list[i].className = 'lis';
                
            } 
            for(var i=0;i<points.length;i++){
                points[i].className='poi';
            }  
            
        }
        var goIndex = function(){//改变类名
            clearCur();
            list[index].className='lis cur';
            points[index].className='poi cur';
        }
        var goNext = function(){//前往下一张图片和圆点
            if(index < 3){
                index++;
            } else{
                index=0;
            }
            goIndex();
        }
        var goPre = function(){
            if(index==0){
                index = 4;
            }else{
                index--;
            }
            goIndex();
        }
        for(var i = 0; i < points.length; i++){
            points[i].addEventListener('mouseenter',function(){
                var pointIndex = this.getAttribute('data-index');//获取标签内容
                index=pointIndex;
                goIndex();
            })
        }
           

        setInterval(function(){
            goNext();
        },5000)

       
       
   
      
   
    </script>
